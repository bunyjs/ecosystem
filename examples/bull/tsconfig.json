    "useDefineForClassFields": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "rootDir": "source",
    "jsx": "react-jsx",
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "include": [
    "source"
  ],
  "exclude": [
    "dist"
  ]
}
